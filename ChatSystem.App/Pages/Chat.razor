@page "/chat"

<section class="chat">
    @if (Author != null)
    {
        <h3>Add message for @Author</h3>
    }
    else
    {
        <h3>Add message</h3>
    }
    <EditForm Model="@Message" OnSubmit="@Create" class="card card-body bg-light mt-5">
        <div class="form-group row">
            <label for="author" class="col-md-2 col-form-label">Author:</label>
            <div class="col-md-10">
                <InputText id="author" class="form-control" @bind-Value="@Message.Author" placeholder="Enter your name or nickname" />
            </div>
        </div>
        <div class="form-group row">
            <label for="text" class="col-md-2 col-form-label">Text:</label>
            <div class="col-md-10">
                <InputText id="text" class="form-control" @bind-Value="@Message.Text" placeholder="Enter the text of the message here" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </EditForm>

    @if (Messages.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Author</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Messages)
                {
                    <tr>
                        <td>@message.Author</td>
                        <td>@message.Text</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>